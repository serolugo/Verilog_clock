module decoder_esp (
	input flag_pm,
	input flag_24h,
	output [6:0] seg_0,
	output [6:0] seg_1,
);

	always (*) begin 
		if (flag_24h) begin
			seg_0 = 7'b0101111;
			seg_1 = 7'b0001001;
		end else begin 
			case(flag_pm)
				1'b0: seg_0 = 7'b0001000, seg_1 = 7'b0101011;
				1'b0: seg_0 = 7'b0001100, seg_1 = 7'b0101011;
			end
	end 

endmodule